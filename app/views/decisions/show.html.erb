<%= render "header" %>

<div class="center-column" id="show-decision">
  <h1><%= @decision.title %></h1>
  <h4>Posed by <%= link_to @decision.author.username, @decision.author %></h4>
  <p><%= @decision.content %></p>

  <div id="large-vote-btn-wrapper">
    <% div_number = 0 %>
    <% @decision.options.each do |option| %>
    <% div_id = "option-box-#{div_number}" %>
    <div id="<%= div_id %>">
      <%= link_to option.content, decision_option_vote_path(@decision.id, option.id), method: :post, class: "vote-btn" %><br>
      <%= link_to option.vote_count, option, id: "vote-count" %>
    </div>
    <% div_number += 1 %>
    <% end %>
  </div>
</div>
