<div class="card">
  <% @discussions.each do |discussion| %>
    <%= link_to discussion do %>
      <div class="discussion-box group">
        <%= image_tag discussion.author.uploaded_avatar.url, class: "discussion-index-avatar" %>
        <h5><%= discussion.replies.count %> people are discussing <%= discussion.author.username %>'s question:</h5>
        <h5><%= discussion.decision.title %></h5>
      </div>
    <% end %>
  <% end %>
  <p class="right"><%= link_to "View all discussions", discussions_path %></p>
</div>
