<% if !current_user %>
<header>
<% else %>
<header id="header-logged-in">
<% end %>
  <nav>
    <h2 class="logo"><%= link_to "LIMBO", '/' %></h2>
    <ul>
      <li><%= link_to "Create Account", new_user_registration_path if !current_user %></li>
      <li><%= link_to "Sign In", new_user_session_path if !current_user %></li>
      <% if current_user %>
      <li id="signed-in-as">Signed in as <%= link_to (current_user.username || current_user.first_name), current_user %> <%= image_tag current_user.uploaded_avatar.url, id: "avatar-header" if current_user.uploaded_avatar.url%></li>
      <%= render 'layouts/messages' %>
      <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% end %>
    </ul>
  </nav>
</header>
