<header>
  <nav>
    <h2 class="logo"><%= link_to "LIMBO", '/' %></h2>
    <ul>
      <li><%= link_to "Create Account", new_user_registration_path if !current_user %></li>
      <li><%= link_to "Sign In", new_user_session_path if !current_user %></li>
      <% if current_user %>
      <li>Signed in as <%= link_to current_user.username, current_user %></li>
      <%= image_tag current_user.avatar_display, id: "avatar-header" if current_user.avatar %>
      <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% end %>
    </ul>
  </nav>
</header>
