@font-face {
  font-family: "Myriad Pro";
  src: url(/assets/fonts/MyriadPro-Regular.otf);
}

body {
 font-family: "Myriad Pro", sans-serif;
 margin: 0 auto;
 width: 100%;
 background-color: #25282e;
 color: #DDDDDD;
}

main {
  margin-top: 50px;
}

h1, h2, h3, h4, h5, h6, p {
  font-weight: normal;
  margin: 0;
  padding: 0;
}

h2 {
  font-size: 30px;
}

a {
  text-decoration: none;
  color: #25282e;
}

a:hover {
  color: #F5A241;
}

input {
  font-size: 1.5em;
  width: 265px;
  border: 1px solid #dddddd;
  outline: none;
  margin-bottom: 20px;
}

#search-form-field {
  position: absolute;
  display: inline;
  margin-left: 120px;
  margin-top: 8px;
  width: 200px;
  font-size: 1em;
  border: 1px solid #25282E;
}

.flash {
  color: #F5A241;
}

.group:after {
  content: "";
  display: table;
  clear: both;
}

p {
  font-size: 1em;
}

@media screen and (max-width: 999px) {
  .decision-strip {
    float: none;
    width: 90%;
    margin-left: 5%;
  }

  .left-cards {
    margin: 0 auto;
    display: none;
  }
}
