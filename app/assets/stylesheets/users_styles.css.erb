.profile-wrapper {
  width: 93%;
  height: 500px;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: #DDDDDD;
  color: #25282E;
  border-radius: 4px;
}

.profile-wrapper a {
  font-weight: bolder;
}

.profile-wrapper ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.profile-show-avatar {
  width: 180px;
  float: right;
}

.user-box {
  text-align: left;
  position: relative;
  border-radius: 4px;
  border: 1px solid #aaaaaa;
  margin-bottom: 4px;
  color: #25282E;
}

.user-box:hover {
  background-color: #eeeeee;
}

.user-box h3:hover {
  color: #F5A241;
}

.user-info {
  float: left;
  width: 40%;
}

.user-history {
  float: right;
  width: 50%;
}

.user-history li {
  margin-top: 4px;
  border-bottom: 1px solid white;
}

.user-info ul {
  font-size: .75em;
}

.user-strip {
  width: 550px;
  float: right;
  margin-top: 15px;
  margin-right: 15px;
  padding: 5px;
  text-align: center;
  right: 0;
  border-radius: 4px;
  border: 1px solid #F5A241;
  background-color: #dddddd;
}

#user-slide-avatar {
  width: 50px;
  position: absolute;
  top: 5px;
  right: 5px;
}

#user-slide ul {
  margin: 0;
  padding: 0;
  list-style: none;
  font-size: .75em;
}
