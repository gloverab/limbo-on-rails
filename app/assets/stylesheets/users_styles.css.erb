.profile-wrapper {
  width: 93%;
  height: 500px;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: #DDDDDD;
  color: #25282E;
  border-radius: 4px;
}

.profile-wrapper a {
  font-weight: bolder;
}

.profile-wrapper ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.user-info {
  float: left;
  width: 40%;
}

.user-history {
  float: right;
  width: 50%;
}

.user-history li {
  margin-top: 4px;
  border-bottom: 1px solid white;
}

.user-info ul {
  font-size: .75em;
}

#user-strip {
  width: 53%;
  float: right;
  margin-top: 15px;
  margin-right: 15px;
  text-align: center;
  right: 0;
}

#user-slide {
  column-count: 2;
  padding: 5px;
  margin-bottom: 2px;
  position: relative;
  text-align: left;
  width: 98%;
  background-color: #dddddd;
  color: #25282E;
  border-radius: 2px;
}

#user-slide-avatar {
  width: 50px;
  position: absolute;
  top: 5px;
  right: 5px;
}

#user-slide ul {
  margin: 0;
  padding: 0;
  list-style: none;
  font-size: .75em;
}

.profile-show-avatar {
  width: 180px;
  float: right;
}
