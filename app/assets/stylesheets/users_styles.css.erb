.profile-wrapper {
  width: 93%;
  height: 500px;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: white;
  color: #25282E;
  border-radius: 4px;
}

.profile-wrapper a {
  font-weight: bolder;
}

.profile-wrapper ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.profile-show-avatar {
  object-fit: cover;
  width: 180px;
  height: 180px;
  float: right;
}

.profile-header {
  max-width: 240px;
}

.edit-page-avatar {
  width: 200px;
}

.user-box {
  text-align: left;
  position: relative;
  border-radius: 4px;
  border: 1px solid #aaaaaa;
  margin-bottom: 4px;
  color: #25282E;
  transition: all .1s ease-in-out;
}

.user-box:hover {
  background-color: #F5F8FA;
}

.user-show-history.in {
  transition: all .1s ease-in-out;
}

.user-info {
  float: left;
  width: 40%;
}

.user-history {
  float: right;
  width: 50%;
}

.user-history li {
  margin-top: 4px;
  border-bottom: 1px solid white;
}

.user-info ul {
  font-size: .75em;
}

.user-strip {
  width: 50%;
  float: right;
  margin-top: 15px;
  margin-right: 15px;
  padding: 5px;
  text-align: center;
  right: 0;
  border: 1px solid #eeeeee;
  background-color: white;
  box-shadow: 1px 1px 1px #25282E;
}

.user-slide {
  color: #25282E;
  border: 1px solid #eeeeee;
  margin-bottom: 10px;
  position: relative;
  background-color: white;
  box-shadow: 1px 1px 1px #25282E;
}

.edit-wrapper {
  text-align: left;
  display: relative;
}

.photo-wrapper {
  display: inline-block;
  vertical-align: top;
}

#photo-upload-form {
  display: inline-block;
}

#user-slide-avatar {
  object-fit: cover;
  width: 50px;
  height: 50px;
  position: absolute;
  top: 5px;
  right: 5px;
}

.user-slide ul {
  margin: 0;
  padding: 0;
  list-style: none;
  font-size: .75em;
}

#limit {
  height: 0;
  position: relative;
  overflow: hidden;
}
