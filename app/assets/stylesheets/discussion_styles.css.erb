.discussion-overview {
  width: 93%;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: #DDDDDD;
  color: #25282E;
  border-radius: 4px;
}

.discussion-index a {
  color: #DDDDDD;
}

.new-discussion {
  margin-top: 10px;
  text-align: center;
}

.new-discussion input {
  width: 400px;
}

.new-discussion textarea {
  width: 400px;
}

.new-discussion .time-box {
  width: 70px;
}

.discussion-user {
  float: left;
  width: 35%;
}

.reply-box {
  border: 1px solid #25282E;
  margin-bottom: 8px;
}

.discussion-user img {
  width: 128px;
}

.discussion-user ul {
  font-size: .75em;
  margin: 0;
  padding: 0;
  list-style: none;
}

.discussion-details {
  position: relative;
  margin: 5px;
  width: 60%;
  float: right;
}

.discussion-header {
  border: 1px solid #25282E;
  margin-bottom: 15px;
  text-align: center;
}

.new-reply {
  text-align: center;
}

#reply-show-avatar {
  float: left;
  width: 80px;
}
