.discussion-overview {
  width: 93%;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: white;
  color: #25282E;
  border-radius: 4px;
}

.discussion-index a {
  color: #DDDDDD;
}

.new-discussion {
  display: block;
  margin: 0 auto;
  width: 550px;
  margin-top: 10px;
  text-align: center;
}

.new-discussion input {
  width: 400px;
}

.new-discussion textarea {
  width: 400px;
}

.new-discussion .time-box {
  width: 70px;
}

.discussion-user {
  float: left;
  width: 35%;
}

.reply-box {
  border: 1px solid #25282E;
  margin-bottom: 8px;
}

.discussion-user img {
  width: 128px;
}

.discussion-user ul {
  font-size: .75em;
  margin: 0;
  padding: 0;
  list-style: none;
}

.discussion-details {
  position: relative;
  margin: 5px;
  width: 60%;
  float: right;
}

.discussion-header {
  border: 1px solid #25282E;
  margin-bottom: 15px;
  text-align: center;
}

.new-reply {
  text-align: center;
}

.reply-details {

}

.reply-show-avatar {
  float: left;
  width: 80px;
}

.discussion-box {
  border-radius: 4px;
  border: 1px solid #aaaaaa;
  margin-bottom: 4px;
}

.discussion-box:hover {
  background-color: #eeeeee;
}

.discussion-index-avatar {
  border-radius: 2px;
  float: left;
  width: 80px;
}

.new_reply {
  float: left;
  border: 1px solid #25282E;
  width: 93%;
}

#reply_submit {
  width: auto;
  margin-left: 5px;
  background-color: transparent;
  color: #25282E;
  border: none;
}

#reply_submit:hover {
  color: #F58340;
}

.right {
  text-align: right;
}
