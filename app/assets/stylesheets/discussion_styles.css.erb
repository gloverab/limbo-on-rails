.discussion-overview {
  width: 93%;
  padding: 5px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
  background-color: #DDDDDD;
  color: #25282E;
  border-radius: 4px;
}

.discussion-user {
  float: left;
  width: 35%;
}

.discussion-user img {
  width: 128px;
}

.discussion-user ul {
  font-size: .75em;
  margin: 0;
  padding: 0;
  list-style: none;
}

.discussion-details {
  margin: 5px;
  background-color: blue;
  width: 60%;
  float: right;
}

.discussion-details h1 {
  text-align: center;
}

.discussion-details h4 {
  text-align: center;
}

.new-reply {
  text-align: center;
}
