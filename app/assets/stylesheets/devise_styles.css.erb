.new_user {
  text-align: center;
}

.edit_user {
    -webkit-column-count: 2; /* Chrome, Safari, Opera */
    -moz-column-count: 2; /* Firefox */
    column-count: 2;
}

#remember_me {
  width: 10px;
  margin-bottom: 0;
}


.avatar-strip ul {
  list-style: none;
}

.avatar-strip li {
  display: inline;
}

.avatar-select {
  width: 70px;
  padding: 10px;
  margin: 5px;
  border-radius: 50%;
  background-color: white;
  border: 4px solid #DDDDDD;
}

.avatar-select:hover {
  border: 4px solid #EAA55E;
}
