/*HEADER*/

header {
  position: fixed;
  z-index: 100;
  width: 100%;
  margin: 0 auto;
  top: 0;
  height: 40px;
  background-color: #dddddd;
  color: #25282e;
  box-shadow: 1px 1px 2px #25282e;
}

#header-logged-in {
  background-color: white;
}

header .logo {
  float: left;
  margin-left: 1%;
  position: absolute;
  bottom: 0;
}

header ul {
  float: right;
  margin-right: 1%;
}

header li {
  display: inline;
  margin-left: 10px;
}

#signed-in-as {
  height: 60px;
  margin-right: 28px;
}

#avatar-header {
  position: absolute;
  height: 24px;
  margin-top: -5px;
  /*padding: -5px;*/
}
