/*HEADER*/

header {
  position: fixed;
  z-index: 100;
  width: 100%;
  margin: 0 auto;
  top: 0;
  height: 40px;
  background-color: #dddddd;
  color: #25282e;
  box-shadow: 2px 2px 2px #25282e;
}

header .logo {
  float: left;
  margin-left: 1%;
  position: absolute;
  bottom: 0;
}

header ul {
  float: right;
  margin-right: 1%;
}

header li {
  display: inline;
  margin-left: 10px;
}

#avatar-header {
  height: 20px;
  margin: 0;
  padding: 0;
}
