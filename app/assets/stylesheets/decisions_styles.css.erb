textarea {
  font-size: 1em;
  width: 265px;
  height: 200px;
  margin-bottom: 20px;
}

article {
  position: relative;
  width: 550px;
  height: 200px;
  display: block;
  margin: 0 auto;
  margin-bottom: 15px;
  text-align: center;
  color: #25282E;
  background-color: #DDDDDD;
  border: 1px solid #F5A241;
  border-radius: 5px;
}

article h2 {
  margin: 10px;
}

.center-column {
  text-align: center;
  border: 1px solid #3b4049;
  width: 95%;
  display: block;
  margin: 0 auto;
}

.new-decision-from-index {
  margin-top: 15px;
}

.new_decision {
  text-align: center;
  display: block;
  margin: 0 auto;
}

.vote-btn {
  background-color: #F5A241;
  display: inline-block;
  text-align: center;
  font-size: 1em;
  width: 90%;
  height: 50px;
  margin: 0;
  padding: 5px;
  border-radius: 4px;
}

.option-box {
  width: 400px;
}

.time-box {
  width: 70px;
}


#decisions-header {
  text-align: left;
  margin-top: 60px;
}

#decisions-header ul {
  list-style: none;
}

#decisions-header li {
  display: inline-block;
  width: 120px;
}

#decisions-header a {
  color: #DDDDDD;
}

#decisions-header a:hover {
  color: #F5A241;
}

#show-decision {
  height: 600px;
}

#vote-btn-wrapper {
  width: 100%;
  display: inline;
}

#vote-btn-wrapper a:hover {
  color: #25282E;
  background-color: #7FBEEB;
}

#option-box-0 {
  float: left;
  width: 50%;
}

#option-box-1 {
  float: right;
  width: 50%;
}

#vote-count {
  background-color: #F5A241;
  display: inline-block;
  padding: 2px 5px 0 5px;
  border-bottom-left-radius: 6px;
}

#decision_title {
  width: 400px;
}

#decision_content {
  width: 400px;
}

#decision_deadline {
  width: 80px;
}

#decision-details {
  width: 100%;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #25282E;
}

#decision_title_submit {
  width: auto;
  margin-left: 5px;
  background-color: transparent;
  color: #DDDDDD;
  border: none;
}

#decision_title_submit:hover {
  color: #F5A241;
}
