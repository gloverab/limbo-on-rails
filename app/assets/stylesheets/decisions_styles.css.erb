textarea {
  font-size: 1em;
  width: 265px;
  height: 200px;
  margin-bottom: 20px;
}

article {
  position: relative;
  width: 550px;
  min-height: 160px;
  display: block;
  margin: 0 auto;
  margin-bottom: 15px;
  text-align: center;
  color: #25282E;
  background-color: #DDDDDD;
  border: 1px solid #F5A241;
  border-radius: 5px;
}

article h2 {
  margin: 10px;
  margin-bottom: 0;
  margin-left: 28px;
}

.center-column {
  position: relative;
  border: 1px solid #3b4049;
  width: 95%;
  display: block;
  margin: 0 auto;
}

.decision-strip {
  float: right;
  margin-top: 15px;
  margin-right: 15px;
  text-align: center;
  right: 0;
}

.profile-card {
  position: relative;
  padding: 5px;
  float: left;
  min-width: 350px;
  max-width: 400px;
  margin-top: 15px;
  margin-left: 15px;
  border: 1px solid #ED9F13;
  border-radius: 4px;
  background-color: #dddddd;
  color: #25282E;
}

.profile-card ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.new_decision {
  text-align: center;
  display: block;
  margin: 0 auto;
}

.article-avatar {
  position: absolute;
  width: 35px;
  left: 2px;
  top: 2px;
  padding: 3px;
  border-radius: 100%;
  background-color: white;
  border: 2px solid #25282E;
}

.article-avatar:hover {
  border: 2px solid #F5A241;
}

.option-box {
  width: 400px;
}

.time-box {
  width: 70px;
}

.vote-count {
  background-color: #F5A241;
  display: inline-block;
  padding: 2px 5px 0 5px;
  border-bottom-left-radius: 6px;
  margin-bottom: 30px;
}

#new-dilemma {
  width: 550px;
}

#active-avatar {
  border: 4px solid #F5A241;
}

#profile-card-avatar {
  position: absolute;
  top: 5px;
  right: 5px;
}

#decisions-header {
  text-align: left;
  margin-top: 60px;
}

#decisions-header ul {
  list-style: none;
}

#decisions-header li {
  display: inline-block;
  width: 120px;
}

#decisions-header a {
  color: #DDDDDD;
}

#decisions-header a:hover {
  color: #F5A241;
}

#show-decision {
  height: 600px;
}

.vote-btn {
  background-color: #F5A241;
  display: inline-block;
  text-align: center;
  font-size: 1em;
  width: 90%;
  height: 50px;
  margin: 0;
  padding: 5px;
  border-radius: 4px;
}

#vote-selected-btn {
  background-color: #7FBEEB;
  border: none;
}

#vote-rejected-btn {
  color: #aaaaaa;
  background-color: transparent;
  border: 1px solid #aaaaaa;
}

#vote-btn-wrapper {
  width: 100%;
  display: inline;
}

#vote-btn-wrapper a:hover {
  color: #25282E;
  background-color: #7FBEEB;
}

#option-box-0 {
  float: left;
  width: 50%;
}

#option-box-1 {
  float: right;
  width: 50%;
}

#decision_title {
  width: 400px;
}

#decision_content {
  width: 400px;
}

#decision_deadline {
  width: 80px;
}

#decision-details {
  width: 100%;
  position: absolute;
  margin-top: 5px;
  bottom: 0;
  border-top: 1px solid #25282E;
}

#decision_title_submit {
  width: auto;
  margin-left: 5px;
  background-color: transparent;
  color: #DDDDDD;
  border: none;
}

#decision_title_submit:hover {
  color: #F5A241;
}
