textarea {
  font-size: 1em;
  width: 265px;
  height: 200px;
  margin-bottom: 20px;
}

article {
  position: relative;
  width: 100%;
  min-height: 180px;
  display: block;
  margin: 0 auto;
  margin-bottom: 15px;
  text-align: center;
  color: #25282E;
  background-color: white;
  border: 1px solid #eeeeee;
  box-shadow: 1px 2px 2px #25282e;
}

article:hover {
  background-color: #F5F8FA;
}

article h2 {
  margin: 10px 40px 0 40px;
}

article h5 a {
  font-weight: bolder;
}

.center-column {
  position: relative;
  border: 1px solid #3b4049;
  width: 95%;
  max-width: 1050px;
  display: block;
  margin: 0 auto;
}

.decision-strip {
  float: right;
  width: 52%;
  margin-top: 15px;
  margin-right: 3%;
  text-align: center;
  right: 0;
}

.left-cards {
  float: left;
}

.left-cards-fix {
  margin-top: -73px;
  position: fixed;
  display: inline;
}

.card {
  position: relative;
  padding: 5px;
  min-width: 400px;
  max-width: 410px;
  margin-top: 15px;
  margin-left: 15px;
  border: 1px solid #eeeeee;
  /*border-radius: 2px;*/
  background-color: white;
  color: #25282E;
  box-shadow: 1px 1px 2px #25282E;
}

.profile-card ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.new_decision {
  background: -webkit-linear-gradient(rgba(255,0,0,0), white); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(rgba(255,0,0,0), white); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(rgba(255,0,0,0), white); /* For Firefox 3.6 to 15 */
    background: linear-gradient(rgba(255,0,0,0), white); /* Standard syntax */
  color: #25282E;
  text-align: center;
  display: block;
  margin: 0 auto;
  border-radius: 5px;
}

.light-shadow {
  transition: 0.5s;
  box-shadow: 1px 1px 1px #cccccc;
  margin-bottom: 5px;
}

.article-avatar {
  position: absolute;
  width: 41px;
  left: 4px;
  top: 4px;
  border-radius: 5px;
  border: 1px solid white;
}

.article-avatar:hover {
  border: 1px solid #eeeeee;
}

.option-box {
  width: 400px;
}

.time-box {
  width: 70px;
}

.vote-count {
  background-color: #F58340;
  display: inline-block;
  padding: 2px 5px 0 5px;
  border-bottom-left-radius: 6px;
  margin-bottom: 30px;
  top: 0;
}

.view-discussion {
  width: 100%;
  display: block;
  text-align: center;
  margin-bottom: 15px;
}

.vote-btn {
  background-color: #F58340;
  display: inline-block;
  text-align: center;
  font-size: 1em;
  width: 90%;
  height: 50px;
  margin: 0;
  padding: 5px;
  border-radius: 4px;
}

.option-box-wrapper a:hover {
  transition: 0.2s background-color;
  color: #25282E;
  background-color: #A5DBD8;
}

.vote-selected-btn {
  background-color: #65D3E5;
  border: none;
}

.flash-message {
  color: #F58340;
  width: 100%;
  margin: 0 auto;
  bottom: 25px;
  position: absolute;
}

.vote-selected-btn a:hover {
  background-color: #65D3E5;
}

.vote-rejected-btn {
  width: 88%;
  height: 47px;
  color: #aaaaaa;
  background-color: transparent;
  border: 1px solid #aaaaaa;
}

.form-wrapper {
  position: relative;
  border: 1px solid #25282E;
  background-color: white;
}

.form-wrapper input {
  border: 1px solid #25282E;
}

.option-selected-votes {
  margin-bottom: 30px;
  background-color: #65D3E5;
  display: inline-block;
}

.option-rejected-votes {
  display: none;
}

#active-avatar {
  border: 4px solid #F58340;
}

#profile-card-avatar {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 128px;
  border-radius: 2px;
}

#decisions-header {
  text-align: left;
  margin-top: 60px;
}

#decisions-header ul {
  list-style: none;
}

#decisions-header li {
  display: inline-block;
  width: 120px;
}

#decisions-header a {
  color: #25282E;
}

#decisions-header a:hover {
  color: #F58340;
}

#show-decision {
  height: 600px;
}

#vote-btn-wrapper {
  width: 100%;
  display: inline;
}

.option-box-wrapper .vote-selected-btn:hover {
  background-color: #65D3E5;
}

#option-box-1 {
  float: left;
  width: 50%;
}

#option-box-2 {
  float: right;
  width: 50%;
}

#decision_title {
  width: 400px;
}

#decision_content {
  width: 400px;
}

#decision_deadline {
  width: 80px;
}

#decision-details {
  width: 100%;
  position: absolute;
  margin-top: 5px;
  bottom: 0;
  border-top: 1px solid #25282E;
}

#decision_title_submit {
  width: auto;
  margin-left: 5px;
  background-color: transparent;
  color: #25282E;
  border: none;
}

#decision_title_submit:hover {
  color: #F58340;
}

#new_from_index {
  width: 400px;
}

#title-field-only {
  position: relative;
}
