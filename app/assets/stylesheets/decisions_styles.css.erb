textarea {
  font-size: 1em;
  width: 265px;
  height: 200px;
  margin-bottom: 20px;
}

article {
  position: relative;
  width: 90%;
  height: 200px;
  display: block;
  margin: 0 auto;
  margin-bottom: 15px;
  text-align: center;
  color: #25282E;
  background-color: #DDDDDD;
  border: 1px solid #F5A241;
  border-radius: 5px;
}

.center-column {
  text-align: center;
  border: 1px solid #7FBEEB;
  width: 50%;
  display: block;
  margin: 0 auto;
}

.new-decision-from-index {
  margin-top: 15px;
}

.new_decision {
  text-align: center;
  display: block;
  margin: 0 auto;
}

.vote-btn {
  background-color: #F5A241;
  float: left;
  bottom: 0;
  display: inline;
  text-align: center;
  font-size: .75em;
  width: 45%;
  height: 50px;
  margin: 2.5%;
  border-radius: 4px;
}

.vote-btn:hover {
  background-color: #7FBEEB;
}

.option-box {
  width: 400px;
}

.time-box {
  width: 70px;
}

#vote-btn-wrapper {
  width: 100%;
  display: inline;
}

#decision_title {
  width: 400px;
}

#decision_content {
  width: 400px;
}

#decision_deadline {
  width: 80px;
}

#decision-details {
  bottom: 0;
}

#decision-details {
  width: 100%;
  position: absolute;
  bottom: 0;
}

#decision_title_submit {
  width: auto;
  margin-left: 5px;
  background-color: transparent;
  color: #DDDDDD;
  border: none;
}

#decision_title_submit:hover {
  color: #F5A241;
}
